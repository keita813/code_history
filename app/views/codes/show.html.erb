<div>
	<table>
		<tbody>
			<tr>
				<td>
					<h1><%= @code.title%></h1>
				</td>
				<td>
					<%= @code.user.name%>
				</td>
				<td>
					<%= @code.created_at.strftime('%Y/%m/%d') %>
				</td>
			</tr>
		</tbody>
	</table>
	<div>
		<%= @code.body %>
	</div>
	<% if @code.user == current_user %>
	<tbody>
		<tr>
			<td>
				<%= link_to "編集"%>
			</td>
			<td>
				<%= link_to "削除",code_path(@code.id), method: :delete, "data-confirm" => "本当に削除しますか？"%>
			</td>
		</tr>
	</tbody>
	<% end %>
</div>
