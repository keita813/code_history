<div class="container">
	<div class="row">
		<div class="col-xs-10 col-xs-offset-1">
			<div class="sh-header">

				<h1><%= @code.title%></h1>
				<span class="title-list">
					<%= link_to @code.user.name, user_path(@user)%>

					<% if @code.favorited_by?(current_user) %>

					<%= link_to code_favorites_path(@code.id), method: :delete do %>
					<i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
					<%= @code.favorites.count %>
					<% end %>

					<% else %>

					<%= link_to code_favorites_path(@code.id), method: :post do %>
					<i class="fa fa-heart-o" aria-hidden="true"></i>
					<%= @code.favorites.count %>
					<% end %>
					<% end %>
					<%= @code.created_at.strftime('%Y/%m/%d') %>
				</span>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-xs-10 col-xs-offset-1">
			<%= markdown(@code.body).html_safe %>
		</div>
	</div>
	<div class="row">
		<div class="col-xs-3 col-xs-offset-8">
			<tbody>
				<tr>
					<td>
						<%= link_to '戻る', :back, class: "btn btn-default" %> 
					</td>
					<% if @code.user == current_user %>
					<td>
						<%= link_to "編集", edit_code_path(@code), class: "btn btn-default" %>
					</td>
					<td>
						<%= link_to "削除",code_path(@code.id), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-default"%>
					</td>
				</tr>
			</tbody>
			<% end %>
		</div>
	</div>
</div>
